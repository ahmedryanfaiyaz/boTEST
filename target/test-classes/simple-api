package runners;
import io.restassured.response.Response;
import io.restassured.RestAssured;
import org.junit.Assert;
import org.junit.Before;

import org.junit.Test;

public class SimpleAPI {

	@Before
	public static void setUp() {
		RestAssured.baseURI = "http://localhost:8800/api/v1";
	}

	@Test
	public void test_9jF7SLBY0gwd_search() {
		String testResultId = "test_9jF7SLBY0gwd_search";

		try {
			Response response = RestAssured
					.given()
						.log().all()
						.queryParam("market", "wCKayPS")
						.queryParam("query", "BjfaKgv")
						.queryParam("type", "Jyaxm")
					.when()
						.get("/search");

			response.then().log().all();
			System.out.println("Test passed.");
		} catch (RuntimeException ex) {
			System.err.println(ex.getMessage());
			Assert.fail(ex.getMessage());
		}
	}

	@Test
	public void test_fqL1onDsfoJz_findArtistById() {
		String testResultId = "test_fqL1onDsfoJz_findArtistById";

		try {
			Response response = RestAssured
					.given()
						.log().all()
						.pathParam("artistId", "-535020477")
					.when()
						.get("/artists/{artistId}");

			response.then().log().all();
			System.out.println("Test passed.");
		} catch (RuntimeException ex) {
			System.err.println(ex.getMessage());
			Assert.fail(ex.getMessage());
		}
	}

	@Test
	public void test_ubsz0GsQMCTH_getArtists() {
		String testResultId = "test_ubsz0GsQMCTH_getArtists";

		try {
			Response response = RestAssured
					.given()
						.log().all()
						.queryParam("isAlive", "false")
						.queryParam("nationality", "gdRoB")
						.queryParam("ageUnder", "-1440961118")
						.queryParam("ageOver", "-2020067111")
						.queryParam("name", "nDjgSb")
						.queryParam("age", "660253612")
					.when()
						.get("/artists");

			response.then().log().all();
			System.out.println("Test passed.");
		} catch (RuntimeException ex) {
			System.err.println(ex.getMessage());
			Assert.fail(ex.getMessage());
		}
	}

}
